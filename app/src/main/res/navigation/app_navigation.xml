<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cocos.ammymovie.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.cocos.ammymovie.ui.detail.DetailsFragment"
        android:label="DetailsFragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.cocos.ammymovie.ui.favorite.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/ratingsFragment"
        android:name="com.cocos.ammymovie.ui.ratings.RatingsFragment"
        android:label="RatingsFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.cocos.ammymovie.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.cocos.ammymovie.ui.search.SearchFragment"
        android:label="fragment_common"
        tools:layout="@layout/fragment_common" />
</navigation>